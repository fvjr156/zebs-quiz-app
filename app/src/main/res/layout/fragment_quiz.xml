<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/quiz_fragment_background"
    tools:context=".ui.fragment.QuizFragment">

    <ImageView
        android:id="@+id/fragment_quiz_avatar"
        android:layout_width="400dp"
        android:layout_height="600dp"
        android:layout_gravity="top|center"
        android:src="@drawable/fix1" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/fragment_quiz_dialog_box_toggle_btn"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="top|left"
        android:layout_margin="10dp"
        android:background="@drawable/dialog_choice_button"
        android:backgroundTint="?attr/colorPrimary"
        android:src="@drawable/baseline_visibility_24"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/fragment_quiz_question_fragment_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/fragment_quiz_message_box"
            android:layout_width="425dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/yurika_message_box"
            android:elevation="6dp"
            android:orientation="vertical"
            android:paddingHorizontal="30dp"
            android:paddingVertical="60dp"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quiz_info"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_quiz_message_box_2"
            android:layout_width="385dp"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_box"
            android:elevation="6dp"
            android:orientation="vertical"
            android:padding="40dp"
            android:visibility="visible">

            <Button
                android:id="@+id/fragment_quiz_intro_start_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/dialog_choice_button"
                android:paddingHorizontal="24dp"
                android:paddingVertical="12dp"
                android:text="@string/btn_start_quiz"
                android:textAllCaps="false"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_quiz_dialog_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_box"
            android:elevation="6dp"
            android:orientation="vertical"
            android:padding="40dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/fragment_quiz_dialog_box_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingBottom="16dp"
                android:text="This is a sample question."
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/fragment_quiz_dialog_box_btn1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/dialog_choice_button"
                android:paddingHorizontal="24dp"
                android:paddingVertical="12dp"
                android:text="A. Sample Choice A"
                android:textAllCaps="false"
                android:textSize="12sp" />

            <Button
                android:id="@+id/fragment_quiz_dialog_box_btn2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/dialog_choice_button"
                android:paddingHorizontal="24dp"
                android:paddingVertical="12dp"
                android:text="B. Sample Choice B"
                android:textAllCaps="false"
                android:textSize="12sp" />

            <Button
                android:id="@+id/fragment_quiz_dialog_box_btn3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/dialog_choice_button"
                android:paddingHorizontal="24dp"
                android:paddingVertical="12dp"
                android:text="C. Sample Choice C"
                android:textAllCaps="false"
                android:textSize="12sp" />

            <Button
                android:id="@+id/fragment_quiz_dialog_box_btn4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/dialog_choice_button"
                android:paddingHorizontal="24dp"
                android:paddingVertical="12dp"
                android:text="D. Sample Choice D"
                android:textAllCaps="false"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_quiz_score_box"
            android:layout_width="385dp"
            android:layout_height="300dp"
            android:background="@drawable/yurika_message_box"
            android:elevation="6dp"
            android:orientation="vertical"
            android:paddingTop="120dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/fragment_quiz_score_box_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingBottom="16dp"
                android:text="This is a sample score."
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/fragment_quiz_score_box_restart_btn"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/dialog_choice_button"
                android:paddingHorizontal="24dp"
                android:paddingVertical="12dp"
                android:text="@string/restart_quiz"
                android:textAllCaps="false"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>